<UserControl x:Class="Soylent.View.HITError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:turk="clr-namespace:Soylent"
             HorizontalContentAlignment="Stretch" Foreground="#FFBA1818">
    <Grid>
        <Label Foreground="#FFC83636" FontSize="32" Margin="4,-12,-4,12" Height="53">!</Label>
        <StackPanel HorizontalAlignment="Stretch" Margin="25 0 0 0">
            <TextBlock Name="errorText" Foreground="#FFE01D1D" TextWrapping="Wrap" HorizontalAlignment="Stretch">There is a problem. This line is too long.</TextBlock>
            <TextBlock Name="hyperlinkBox" Margin="0 10 0 0" TextWrapping="Wrap"><Hyperlink Name="hyperlink" RequestNavigate="hyperlink_RequestNavigate">Hyperlink</Hyperlink></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
