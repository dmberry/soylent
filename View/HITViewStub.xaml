<UserControl x:Class="Soylent.View.HITViewStub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:turk="clr-namespace:Soylent"
    HorizontalContentAlignment="Stretch" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="120">
    <Grid Margin="0" Name="grid">
        <Label HorizontalAlignment="Left" Name="hitType" Width="120" FontSize="16" FontWeight="Regular" Margin="0,0,0,30">Label</Label>
        <TextBlock Margin="0,20,0,0" MaxHeight="38" VerticalAlignment="Top" Padding="5" Name="previewTextBlock">
            <Hyperlink>
                <TextBlock Margin="0,0,0,0" Name="previewText" VerticalAlignment="Top" TextWrapping="Wrap" TextTrimming="WordEllipsis" Text="preview text" FontStyle="Normal" TextDecorations="None" Foreground="Gray" HorizontalAlignment="Left" />
            </Hyperlink>
        </TextBlock>
        <StackPanel Name="details" Margin="0, 55, 0, 5">
            <Label Content="0.00" Height="28" HorizontalAlignment="Right" Name="cost" VerticalAlignment="Top" Width="42" ContentStringFormat="c" />
            <ProgressBar HorizontalContentAlignment="Stretch" Height="20" Name="hitProgress" Margin="5, 0, 5, 0" />
        </StackPanel>
    </Grid>
</UserControl>
