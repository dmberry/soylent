<UserControl x:Class="Soylent.View.HITViewStub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:turk="clr-namespace:Soylent"
    HorizontalContentAlignment="Stretch">
    <Grid Margin="0" Name="grid">
        <Label HorizontalAlignment="Left" Name="hitType" Width="120" FontSize="16" FontWeight="Regular" Margin="0,0,0,30">Label</Label>
        <TextBlock Margin="0,20,0,0" MaxHeight="38" VerticalAlignment="Top" Padding="5" Name="previewTextBlock">
            <Hyperlink>
                <TextBlock Margin="0,0,0,0" Name="previewText" VerticalAlignment="Top" TextWrapping="Wrap" TextTrimming="WordEllipsis" Text="preview text" FontStyle="Normal" TextDecorations="None" Foreground="Gray" HorizontalAlignment="Left" />
            </Hyperlink>
        </TextBlock>
        <ProgressBar HorizontalContentAlignment="Stretch" Margin="10,60,10,10" Height="20" Name="hitProgress" />
    </Grid>
</UserControl>
