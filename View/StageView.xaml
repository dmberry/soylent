<UserControl x:Class="Soylent.View.StageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:turk="clr-namespace:Soylent.View"
    Height="60" HorizontalContentAlignment="Stretch" MinWidth="175">
    <Grid Margin="0">
        <ProgressBar HorizontalContentAlignment="Stretch" Margin="5.5,36,4.5,5" Name="hitProgress" />
        <Label Height="28" HorizontalAlignment="Left" Margin="0,0,0,0" Name="stageName" VerticalAlignment="Top">Stage 1: Find</Label>
        <Label HorizontalAlignment="Right" HorizontalContentAlignment="Right" Name="cost" Width="78" Height="28" VerticalAlignment="Top" ContentStringFormat="c">0.10</Label>
        <Label HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,14,0,20" Name="numTurkers" Width="103">0 of 10 workers</Label>
    </Grid>
</UserControl>
